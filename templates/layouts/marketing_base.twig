{% set currentPath = currentPath|default('/') %}
{% set canonicalPath = currentPath == '' ? '/' : currentPath %}
{% set canonicalUrl = app.url ~ (canonicalPath == '/' ? '/' : canonicalPath) %}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {% if page.title is defined %}
        {{ page.title }}
      {% else %}
        DonorDocs — IRS-Compliant Donation Receipts for U.S. Nonprofits
      {% endif %}
    </title>
    <meta
      name="description"
      content="{{ page.description|default('Generate branded, audit-ready receipts and Excel reports in seconds. Built for U.S. 501(c)(3) nonprofits.') }}"
    />
    <meta property="og:title" content="{{ page.title|default('DonorDocs — IRS-Compliant Donation Receipts') }}" />
    <meta
      property="og:description"
      content="{{ page.description|default('Branded PDFs, Excel exports, and sequential receipt IDs for U.S. nonprofits.') }}"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ canonicalUrl }}" />
    <meta property="og:image" content="{{ app.url }}/assets/og-image.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ page.title|default('DonorDocs — IRS-Compliant Donation Receipts') }}" />
    <meta
      name="twitter:description"
      content="{{ page.description|default('Generate branded, audit-ready receipts and Excel reports in seconds. Built for U.S. nonprofits.') }}"
    />
    <meta name="twitter:image" content="{{ app.url }}/assets/og-image.png" />
    <link rel="canonical" href="{{ canonicalUrl }}" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap"
      />
    </noscript>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="{{ app.url }}/assets/css/marketing.css" />
    <style>
      body {
        font-family: 'Work Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
      }
    </style>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "DonorDocs",
        "url": "{{ app.url }}/",
        "logo": "{{ app.url }}/assets/logo.png",
        "sameAs": []
      }
    </script>
  </head>
  <body class="marketing-body">
    <a href="#content" class="visually-hidden-focusable">Skip to content</a>
    <header class="marketing-header" role="banner">
      <nav
        class="navbar navbar-expand-lg navbar-dark py-3 marketing-navbar"
        aria-label="Primary"
        role="navigation"
      >
        <div class="container">
          <a class="navbar-brand fw-semibold text-light" href="{{ url_for('home') }}">
            DonorDocs
          </a>
          <button
            class="navbar-toggler text-light border-0"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#marketingNav"
            aria-controls="marketingNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="marketingNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link text-light {% if canonicalPath == '/' %}active{% endif %}"
                  href="{{ url_for('home') }}"
                  aria-current="{% if canonicalPath == '/' %}page{% else %}false{% endif %}"
                >
                  Home
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="{{ url_for('home') }}#features">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="{{ url_for('home') }}#how-it-works">How it Works</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-light {% if currentPath is defined and currentPath starts with '/pricing' %}active{% endif %}"
                  href="{{ url_for('pricing') }}"
                  aria-current="{% if currentPath is defined and currentPath starts with '/pricing' %}page{% else %}false{% endif %}"
                >
                  Pricing
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="{{ url_for('home') }}#docs">Docs</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="mailto:support@donordocs.com">Contact</a>
              </li>
            </ul>
            <div class="d-flex gap-2">
              <a class="btn btn-outline-primary" href="{{ url_for('dashboard') }}" aria-label="Open app dashboard">
                Open App
              </a>
              <a class="btn btn-primary" href="{{ url_for('dashboard') }}" aria-label="Get started with DonorDocs">
                Get Started
              </a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main id="content" tabindex="-1">
      {% block content %}{% endblock %}
    </main>

    <footer class="marketing-footer" role="contentinfo">
      <div class="container py-4 d-flex flex-column flex-md-row align-items-center justify-content-between gap-3">
        <span class="text-muted">© {{ "now"|date("Y") }} DonorDocs. All rights reserved.</span>
        <div class="d-flex flex-wrap gap-3">
          <a class="text-muted" href="{{ url_for('privacy') }}">Privacy</a>
          <a class="text-muted" href="{{ url_for('terms') }}">Terms</a>
          <a class="text-muted" href="mailto:support@donordocs.com">Contact</a>
        </div>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
      defer
    ></script>
  </body>
</html>
